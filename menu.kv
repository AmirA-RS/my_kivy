<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size
    Label:
        color: 0, 0, 1, 1
        text: root.parent.menu_text
        font_size: "60dp"
        font_name: 'Sackers-Gothic-Std-Light.ttf'
        pos_hint: {"center_x": .5, "center_y": .6}
    Button:
        text: root.parent.button_text
        font_name:"Eurostile.ttf"
        pos_hint: {"center_x": .5, "center_y": .4}
        size_hint: .2, .2
        on_press: root.parent.on_menu_press()
        background_color: 1, .3, .5, .8